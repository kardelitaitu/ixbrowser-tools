{
  "name": "ixbrowser-playwright",
  "version": "1.0.2",
  "description": "Browser Automation Project, orchestrates Playwright-based, human-like web automation across multiple ixBrowser profiles in parallel",
  "main": "src/core/_launchAutomation.js",
  "scripts": {
    "start": "npm run build && node dist/core/_launchAutomation.js",
    "build": "tsc",
    "dev": "ts-node src/core/_launchAutomation.ts",
    "install-deps": "npm install playwright-extra playwright-extra-plugin-stealth",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts --ignore-pattern .eslintrc.js --ignore-pattern jest.config.js --ignore-pattern monitoring/**",
    "lint:fix": "eslint src/**/*.ts --ignore-pattern .eslintrc.js --ignore-pattern jest.config.js --ignore-pattern monitoring/** --fix",
    "typecheck": "tsc --noEmit",
    "update-tasks": "ts-node scripts/generate-task-registry.ts"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "playwright": "^1.41.0",
    "playwright-extra": "^4.3.4",
    "zod": "^4.1.12"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
